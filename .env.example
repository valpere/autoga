# AutoGA — environment variables
# Copy to .env and fill in values.
# NOTE: timeout values require a unit suffix: 5s, 1m, etc.

# ── autoga scraper service ────────────────────────────────────────────────────
PORT=8080
API_KEY=                          # Bearer token for POST /scrape. Leave empty to disable auth.

READ_TIMEOUT=5s
WRITE_TIMEOUT=60s
FETCH_TIMEOUT=15s

MAX_CONCURRENCY=5
MAX_URLS_PER_REQUEST=10

# ── Make.com scenario deploy (cmd/makesetup) ──────────────────────────────────
MAKE_API_TOKEN=
MAKE_TEAM_ID=
MAKE_ZONE=eu1                     # eu1 or us1
MAKE_FOLDER_ID=                   # optional
MAKE_INTERVAL_SEC=900             # polling interval in seconds (default: 15 min)

SCENARIO_NAME=AutoGA Digest

# RSS feeds passed to the Make.com scenario blueprint
RSS_FEEDS=.rss_feeds.csv           # CSV file with feed name and URL per row

AUTOGA_URL=https://your-server.example.com

TELEGRAM_CHAT_ID=                 # channel ID, e.g. -1001234567890
TELEGRAM_CONNECTION_ID=           # connection ID from Make.com (Settings → Connections)

# ── Upstash Redis (deduplication) ─────────────────────────────────────────────
UPSTASH_REDIS_REST_URL=            # REST URL, e.g. https://xxxx.upstash.io
UPSTASH_TTL_SEC=2592000            # key TTL in seconds (default: 30 days)

# ── LLM API (Ollama Cloud) ────────────────────────────────────────────────────
LLM_API_URL=https://ollama.com/api/chat
LLM_MODEL=glm-5                    # cloud models: glm-5, qwen3.5, kimi-k2.5

# ── Make.com keychain IDs (Settings → Connections → edit → copy ID from URL) ──
MAKE_KEYCHAIN_UPSTASH=             # keychain ID for Upstash REST API key
MAKE_KEYCHAIN_SCRAPER=             # keychain ID for autoga API key
MAKE_KEYCHAIN_LLM=                 # keychain ID for Ollama Cloud API key
