# AutoGA — environment variables
# Copy to .env and fill in values.
# NOTE: timeout values require a unit suffix: 5s, 1m, etc.

# ── autoga scraper service ────────────────────────────────────────────────────
PORT=8080
API_KEY=                          # Bearer token for POST /scrape. Leave empty to disable auth.

READ_TIMEOUT=5s
WRITE_TIMEOUT=60s
FETCH_TIMEOUT=15s

MAX_CONCURRENCY=5
MAX_URLS_PER_REQUEST=10

# ── RSS feeds ─────────────────────────────────────────────────────────────────
RSS_FEEDS=.rss_feeds.csv          # path to CSV file with Google Alerts RSS feed URLs

# ── Telegram ──────────────────────────────────────────────────────────────────
TELEGRAM_BOT_TOKEN=               # from @BotFather
TELEGRAM_CHAT_ID=                 # channel ID, e.g. -1001234567890
TG_LANGUAGE=uk

# ── Make.com scenario deploy (cmd/makesetup) ──────────────────────────────────
MAKE_API_TOKEN=
MAKE_TEAM_ID=
MAKE_ZONE=eu1                     # eu1 or us1
MAKE_FOLDER_ID=                   # optional
MAKE_INTERVAL_SEC=900             # polling interval in seconds (default: 15 min)

SCENARIO_NAME=AutoGA Digest
ACTIVATE=false                    # set to true to activate scenario after creation

# RSS feed URL passed to the Make.com scenario blueprint
RSS_FEED_URL=

AUTOGA_URL=https://your-server.example.com
AUTOGA_API_KEY=                   # same value as API_KEY above

# ── LLM API (OpenAI-compatible) ───────────────────────────────────────────────
LLM_API_URL=https://openrouter.ai/api/v1/chat/completions
LLM_API_KEY=
LLM_MODEL=anthropic/claude-sonnet-4-6
